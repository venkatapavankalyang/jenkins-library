def PIPELINE_PROPS
pipeline {
   agent any
   libraries {
       lib('jenkins-library')
   }
      parameters {
      choice(name: 'ModuleType', choices: ['All' , 'Maven_Build' , 'Gradle_Build'])
      string(name: 'Branch', defaultValue: 'main')
   }
     stages {
        stage ("Maven_BuilD") {
           when {
               expression { ModuleType == 'All' || ModuleType == 'Maven_Build' }
           }
           steps {
              script {
                 PIPELINE_PROPS = readProperties file: 'properties/pipeline.properties'
                 gitCheckOut("${PIPELINE_PROPS["MAVEN_URL"]}", "$params.Branch","$MAVEN_PROJECT_NAME")
                 def customPath = "${WORKSPACE}/${env.JOB_NAME}"
                 mavenBuild()
              }
           }
        }
        stage ("Gradle_BuilD") {
            when {
                expression { ModuleType == 'All' || ModuleType == 'Gradle_Build' }
            }
            steps {
               script {
                  PIPELINE_PROPS = readProperties file: 'properties/pipeline.properties'
                  gitCheckOut("${PIPELINE_PROPS["GRADLE_URL"]}", "$params.Branch","$GRADLE_PROJECT_NAME" )
                  def customPath = "${WORKSPACE}/${env.JOB_NAME}"
                  gradleBuild()
               }
            }
        }
     }